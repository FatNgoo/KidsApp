<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kitchen_cream"
    android:padding="16dp">

    <!-- TOP ROW: Customer & Order Section -->
    
    <!-- Customer Image Card (Left) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCustomer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/kitchen_pink"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgCustomer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:src="@drawable/ic_customer_placeholder"
            android:contentDescription="Customer" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Order Display Card (Right) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOrder"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="12dp"
        app:cardBackgroundColor="@color/kitchen_yellow"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardCustomer"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvDishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Fruit Salad"
                android:textColor="@color/text_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/imgDish"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/food_apple"
                    android:contentDescription="Dish" />

                <ImageButton
                    android:id="@+id/btnSpeaker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_speaker"
                    android:contentDescription="Read dish name" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Score Display (Top Right) -->
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="â­ 0"
        android:textColor="@color/kitchen_orange"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardOrder" />

    <!-- MIDDLE ROW: Pot & Checklist Section -->

    <!-- Pot Area (Left) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/kitchen_cream"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/kitchen_brown"
        app:strokeWidth="4dp"
        app:layout_constraintBottom_toTopOf="@id/cardIngredients"
        app:layout_constraintEnd_toStartOf="@id/cardChecklist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvScore">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgPot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_pot"
                android:contentDescription="Cooking pot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="ðŸ³ Drop Here"
                android:textColor="@color/kitchen_orange"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Checklist (Right) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardChecklist"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/kitchen_blue"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toTopOf="@id/cardIngredients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvScore">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Recipe"
                android:textAlignment="center"
                android:textColor="@color/kitchen_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/kitchen_blue" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp">

                <LinearLayout
                    android:id="@+id/checklistContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Checklist items will be added dynamically -->
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- BOTTOM ROW: Ingredients Grid -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/kitchen_green"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="ðŸ¥˜ Ingredients"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <!-- Ingredient Grid -->
            <GridLayout
                android:id="@+id/ingredientGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="2"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true">
                <!-- Ingredient items will be added dynamically -->
            </GridLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

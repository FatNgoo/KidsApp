<?xml version="1.0" encoding="utf-8"?>
<!-- Placeholder Logo: Orange circle with white inner circle (star/smile simulation) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Orange Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/pastel_orange" />
            <size
                android:width="150dp"
                android:height="150dp" />
        </shape>
    </item>
    
    <!-- Inner White Circle (Logo Symbol) -->
    <item
        android:bottom="45dp"
        android:left="45dp"
        android:right="45dp"
        android:top="45dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>

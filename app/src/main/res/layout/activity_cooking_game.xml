<?xml version="1.0" encoding="utf-8"?>
<!-- MasterChef Interactive Cooking Game with Chef & Customer Dialogue -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kitchen_cream"
    android:padding="12dp">

    <!-- Score Display (Top Right) -->
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="â­ 0"
        android:textColor="@color/kitchen_orange"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TOP SECTION: Customer Area -->
    <FrameLayout
        android:id="@+id/customerArea"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Customer Speech Bubble -->
        <FrameLayout
            android:id="@+id/customerSpeechBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:visibility="gone">
            
            <TextView
                android:id="@+id/tvCustomerSpeech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_speech_bubble"
                android:text="I want order fried chicken"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:elevation="8dp"
                android:layout_marginBottom="12dp" />
        </FrameLayout>

        <!-- Customer Character -->
        <ImageView
            android:id="@+id/imgCustomer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/ic_customer"
            android:contentDescription="Customer" />
    </FrameLayout>

    <!-- MIDDLE SECTION: Chef & Stove Area -->
    <FrameLayout
        android:id="@+id/kitchenArea"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/customerArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Chef Area (Left Side) -->
        <LinearLayout
            android:id="@+id/chefArea"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Chef Speech Bubble -->
            <FrameLayout
                android:id="@+id/chefSpeechBubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                
                <TextView
                    android:id="@+id/tvChefSpeech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_speech_bubble"
                    android:text="Waiting five minutes"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="8dp"
                    android:layout_marginBottom="12dp" />
            </FrameLayout>

            <!-- Chef Character -->
            <ImageView
                android:id="@+id/imgChef"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_chef"
                android:contentDescription="Chef" />
        </LinearLayout>

        <!-- Stove Area (Right Side) -->
        <FrameLayout
            android:id="@+id/stoveArea"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/bg_stove_area_enhanced"
            android:padding="16dp">

            <!-- Stove/Flame Icon -->
            <ImageView
                android:id="@+id/imgStove"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_stove"
                android:contentDescription="Stove" />

            <!-- Pan on Stove (Drop Target) -->
            <ImageView
                android:id="@+id/imgPan"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pan"
                android:visibility="gone"
                android:contentDescription="Pan" />

            <!-- Cooking Animation -->
            <TextView
                android:id="@+id/tvCookingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="ðŸ”¥"
                android:textSize="40sp"
                android:visibility="gone" />
        </FrameLayout>
    </FrameLayout>

    <!-- BOTTOM SECTION: Ingredients Grid -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/kitchen_green"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp"
        app:layout_constraintTop_toBottomOf="@id/kitchenArea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="ðŸ¥˜ Ingredients"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <!-- Ingredient Grid -->
            <GridLayout
                android:id="@+id/ingredientGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="2"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true">
                <!-- Ingredient items will be added dynamically -->
            </GridLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
